@model IEnumerable<Amazon.BL.Models.CategoryVM>
@{
    ViewData["Title"] = "Categories";
}

<div class="row">
    @if (Model != null)
    {
        @foreach (var category in Model)
        {
            <div class="product col-md-2" width="100px" height="100px">
                <div>
                    <div class="px-2 py-2">
                        <img class="w-100" height="150px" src="@category.Image">
                        <h3 class="h6 fw-bolder ">@category.Name</h3>
                    </div>
                </div>
            </div>
        }
    }
</div>